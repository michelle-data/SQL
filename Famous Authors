

CREATE TABLE authors (id INTEGER PRIMARY KEY,
    full_name TEXT,
    Place_of_birth TEXT);
    
CREATE TABLE books (id INTEGER PRIMARY KEY,
    book_name TEXT,
    author_id INTEGER,
    genre TEXT);
    
